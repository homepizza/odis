{% extends 'tasks/layout.html.twig' %}

{% block title %}Личный профиль{% endblock %}

{% block toolbar %}
    <div class="c-toolbar u-mb-medium">
        <h3 class="c-toolbar__title has-divider">Ваши данные</h3>
        <h5 class="c-toolbar__meta u-mr-auto">Редактирование личного профиля</h5>
        {{ include('tasks/blocks/actions_profile.html.twig') }}
    </div>
{% endblock %}

{% block content %}
    <main>
        <div class="container" style="padding-top: 170px;">
            <div class="row u-mb-large">
                <div class="col-12">
                    <div class="c-tabs">

                        <ul class="c-tabs__list c-tabs__list--splitted nav nav-tabs" id="myTab" role="tablist">
                            <li class="c-tabs__item"><a class="c-tabs__link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Основная информация</a></li>

                            <li class="c-tabs__item"><a class="c-tabs__link" id="nav-poll-tab" data-toggle="tab" href="#nav-poll" role="tab" aria-controls="nav-poll" aria-selected="false">Участие в опросах</a></li>
                            <li class="c-tabs__item"><a class="c-tabs__link" id="nav-rating-tab" data-toggle="tab" href="#nav-rating" role="tab" aria-controls="nav-rating" aria-selected="false">Оценки релизов</a></li>
                        </ul>

                        <div class="c-tabs__content tab-content" id="nav-tabContent">
                            <div class="c-tabs__pane active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="row">
                                    <div class="col-lg-2 u-text-center">
                                        <div class="c-avatar c-avatar--xlarge u-inline-block">
                                            <img class="c-avatar__img" src="{{ asset('media/theme/user1.png') }}" alt="Аватар">
                                        </div>

                                        <a class="u-block u-color-primary" href="#" v-if="false">Редактировать</a>
                                    </div>
                                    <div class="col-lg-5">
                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="firstName">Имя</label>
                                            <input class="c-input" type="text" id="firstName" placeholder="Введите ваше имя и фамилию">
                                        </div>

                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="bio">О себе</label>
                                            <textarea class="c-input" id="bio" placeholder="Пару слов о себе"></textarea>
                                        </div>

                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="lastName">Телефон</label>
                                            <input class="c-input" type="text" id="lastName" placeholder="Введите ваш номер телефона">
                                        </div>


                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="email">E-mail</label>
                                            <input class="c-input" id="email" type="email" placeholder="Введите ваш e-mail">
                                        </div>
                                    </div>

                                    <div class="col-lg-5">
                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="companyName">Должность в компании</label>
                                            <input class="c-input" id="companyName" type="text" placeholder="Администратор">
                                        </div>

                                        <div class="c-field u-mb-small">
                                            <label class="c-field__label" for="website">День рождения</label>
                                            <input class="c-input" id="website" type="text" placeholder="01.01.2019">
                                        </div>

                                        <label class="c-field__label" for="socialProfile">Ваши мессенджеры?</label>

                                        <div class="c-field has-addon-left u-mb-small">
                                                <span class="c-field__addon u-bg-twitter">
                                                    <i class="fa fa-twitter u-color-white"></i>
                                                </span>
                                            <input class="c-input" id="socialProfile" type="text" placeholder="telegram">
                                        </div>

                                        <div class="c-field has-addon-left">
                                                <span class="c-field__addon u-bg-facebook">
                                                    <i class="fa fa-facebook u-color-white"></i>
                                                </span>
                                            <input class="c-input" type="text" placeholder="WhatsApp">
                                        </div>

                                        <label class="c-field__label" style="margin-top: 30px;">Уведомления</label>
                                        <div class="c-field has-addon-left">
                                            <div class="c-choice c-choice--checkbox">
                                                <input class="c-choice__input" id="email-notify" name="checkboxes" type="checkbox">
                                                <label class="c-choice__label" for="email-notify">E-mail</label>
                                            </div>
                                            <div class="c-choice c-choice--checkbox" style="margin-left: 13px;">
                                                <input class="c-choice__input" id="telegram-notify" name="checkboxes" type="checkbox">
                                                <label class="c-choice__label" for="telegram-notify">Telegram</label>
                                            </div>
                                            <div class="c-choice c-choice--checkbox" style="margin-left: 13px;">
                                                <input class="c-choice__input" id="whatsapp-notify" name="checkboxes" type="checkbox">
                                                <label class="c-choice__label" for="whatsapp-notify">WhatsApp</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="c-tabs__pane" id="nav-poll" role="tabpanel" aria-labelledby="nav-poll-tab">
                                <div class="row">
                                    В будущем, тут будут анкеты с вашими ответами
                                </div>
                            </div>
                            <div class="c-tabs__pane" id="nav-rating" role="tabpanel" aria-labelledby="nav-rating-tab">
                                <div class="row">
                                    В будущем, тут будут ваши оценки
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- // .col-12 -->
            </div>

            <div class="row">
